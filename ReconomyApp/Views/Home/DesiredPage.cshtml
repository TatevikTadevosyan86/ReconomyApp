@{
    Layout = "_Layout";
}

<div>
    <!--- <div class="parent-container"> -->
    <!-- Menu Bar -->
    <nav class="menu-bar">
        <ul>
            <li><a href="#" onclick="openModal('addParticipantModal')">Add Participant</a></li>
            <li><a href="#" onclick="openModal('removeParticipantModal')">Remove Participant</a></li>
            <li><a href="#" onclick="openModal('generateReportModal')">Generate Report</a></li>
        </ul>
    </nav>

    <!-- Participant List (Visible by default) -->
    <div id="deltagarens-lista" class="view-group">
        <h3 >DELTAGARNAS LISTA</h3>
        <table id="participantTable" class="table">
            <thead>
                <tr>
                    <th>Namn</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Update</th>
                </tr>
            </thead>
            <tbody>
                <!-- Dynamic rows will be added here -->
            </tbody>
        </table>
    </div>

    <!-- Add Participant Modal -->
    <div id="addParticipantModal" class="modal hidden">
        <div class="modal-content">
            <span class="close" onclick="closeModal('addParticipantModal')">&times;</span>
            <h2>Add Participant</h2>
            <label>Name</label>
            <input type="text" id="addNamnInput" placeholder="Name">
            <label>Start Date</label>
            <input type="date" id="addStartDateInput" placeholder="Start Date">
            <label>End Date</label>
            <input type="date" id="addEndDateInput" placeholder="End Date">
            <label>Arbetstid</label>
            <select id="workCommitmentInput">
                <option value="100">100%</option>
                <option value="50">50%</option>
                <option value="25">25%</option>
            </select>
            <button id="addParticipantButton">Add Participant</button>
        </div>
    </div>

    <!-- Update Participant Modal -->
    <div id="updateParticipantModal" class="modal hidden">
        <div class="modal-content">
            <span class="close" onclick="closeModal('updateParticipantModal')">&times;</span>
            <h2>Update Participant</h2>
            <label>Name</label>
            <input type="text" id="updateNamnInput" placeholder="Name">
            <label>Start Date</label>
            <input type="date" id="updateStartDateInput" placeholder="Start Date">
            <label>End Date</label>
            <input type="date" id="updateEndDateInput" placeholder="End Date">
            <label>Arbetstid</label>
            <select id="updateWorkCommitmentInput">
                <option value="100">100%</option>
                <option value="50">50%</option>
                <option value="25">25%</option>
            </select>

            <button class="updateButton" id="updateParticipantButton">Update Participant</button>
        </div>
    </div>

    <!-- Remove Participant Modal -->
    <div id="removeParticipantModal" class="modal hidden">
        <div class="modal-content">
            <span class="close" onclick="closeModal('removeParticipantModal')">&times;</span>
            <h3>Remove Participant</h3>
            <ul id="participantListToRemove">
                <!-- List of participants to remove -->
            </ul>
            <button type="button" id="removeParticipantButton">Remove Selected</button>
        </div>
    </div>

    <!-- Generate Report Modal -->
    
    <div id="generateReportModal" class="modal hidden">
        <div class="modal-content">
            <span class="close" onclick="closeModal('generateReportModal')">&times;</span>
            <h3>Generate Report</h3>
            <form id="reportForm">
                <!-- Report Type Dropdown -->
                <label for="reportTypeSelect">Select Report Type:</label>
                <select id="reportTypeSelect">
                    <option value="Attendance">Attendance Report</option>
                    <option value="General">General Information Report</option>
                </select><br><br>

                <!-- Start Date for Report 
                <label for="reportStartDateInput">Start Date:</label>
                <input type="date" id="reportStartDateInput"><br><br>

                
                <label for="reportEndDateInput">End Date:</label>
                <input type="date" id="reportEndDateInput"><br><br> -->

                <!-- Generate Button -->
                <button type="button" onclick="generateReport()">Generate Report</button>
            </form>
        </div>
    </div>

    <!--div-->
</div>