<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ReconomyApp</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/sida2.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true">
    <script src="~/js/script.js" asp-append-version="true"></script>
</head>
<body>
    <header>
    <div class="header">
        <div class="logo">
            <img src="~/images/reconomy-logo.png" alt="Company Logo">
        </div>

        <div class="admin-login">
            <!-- Kontrollerar om användaren är inloggad. -->
            
            @if (User.Identity.IsAuthenticated)
            {
                <!-- Show Logout button if the user is logged in -->
                <form asp-action="Logout" method="post" asp-controller="Home">
                    <button type="submit">Logout</button>
                </form>
            }
            else
            {
                <!-- Show Login form if the user is not logged in -->
                <form asp-controller="Home" asp-action="Login" method="post">
                    <input type="text" name="username" placeholder="Username" required />
                    <input type="password" name="password" placeholder="Password" required />
                    <button type="submit">Login</button>
                </form>
                @if (ViewBag.Error != null)
                {
                    <!-- Kontrollerar om det finns ett felmeddelande i ViewBag. -->
                    <div>@ViewBag.Error</div>
                    <!-- Visar felmeddelandet om det finns. -->
                }
            }
        </div>
    </div>
    </header>

    <main role="main" >
        <!-- Huvudinnehållet på sidan. "RenderBody" kommer att ersättas med innehållet från den aktuella vyn som är inladdad. -->
        @RenderBody()
    </main>

    <footer class="footer">
        <div>
            &copy; 2024 - ReconomyApp
        </div>
    </footer>

    <div id="success-popup" class="popup-overlay">
        <div class="popup-content">
            <h2 id="success-header"></h2> <!-- Change header dynamically -->
            <p id="success-message"></p> <!-- Change message dynamically -->
            <button id="close-popup">OK</button>
        </div>
    </div>

    <script src="~/js/script.js" asp-append-version="true"></script>
    <script src="~/js/sida2.js" asp-append-version="true"></script>
    <script src="~/js/rapport.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <!-- Renderar eventuella extra skript som definieras i vyn som använder denna layout. "required: false" innebär att sektionen inte är obligatorisk. -->
    </body>
</html>
